<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="16dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView android:text="What is the capital of France?" android:textSize="18sp" android:layout_marginBottom="10dp"/>
    <RadioGroup android:id="@+id/radioGroup">
        <RadioButton android:id="@+id/optionA" android:text="Berlin"/>
        <RadioButton android:id="@+id/optionB" android:text="Paris"/>
        <RadioButton android:id="@+id/optionC" android:text="Madrid"/>
    </RadioGroup>

    <Button android:id="@+id/btnSubmitQuiz" android:text="Submit Answer" android:layout_marginTop="20dp"/>
    <TextView android:id="@+id/txtFeedback" android:textSize="16sp" android:layout_marginTop="10dp"/>
</LinearLayout>
